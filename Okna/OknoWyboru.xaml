        <Button x:Name="Zwroty" Content="Zwroty" HorizontalAlignment="Left" Margin="152.848,426,0,0" VerticalAlignment="Top" Width="150" Height="50" FontSize="15" Click="Zwroty_Click" Grid.Column="1"/>
